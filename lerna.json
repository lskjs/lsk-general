{
  "version": "2.0.0-beta.3",
  "packages": [
    "packages/*"
  ],
  "command": {
    "create": {
      "homepage": "https://github.com/lskjs/ux",
      "license": "MIT"
    },
    "version": {
      "allowBranch": [
        "master",
        "beta"
      ],
      "conventionalCommits": true,
      "message": "chore(release): %s"
    },
    "version2": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "gitRemote": "upstream",
      "message": "chore(release): %s"
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/dist/**",
        "**/release/**",
        "**/*.md",
        "**/example/**",
        "**/test/**"
      ]
    }
  }
}
