{
  "version": "2.0.0-beta.4",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "beta"
      ],
      "conventionalCommits": true,
      "message": "chore(release): %s"
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/build/**",
        "**/release/**",
        "**/*.md",
        "**/example/**",
        "**/test/**"
      ]
    }
  }
}
